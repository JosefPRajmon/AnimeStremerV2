@using AnimeStreamerV2.Models;
@using Microsoft.AspNetCore.Identity
@using test.Models.AdminSystem

@inject SignInManager<ApplicationUser> SignInManager
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Anime Manager</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    @await RenderSectionAsync("LinkCss", required: false)
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/anime-style.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/ParticipalLayout.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Bangers&family=Roboto:wght@400;700&display=swap" rel="stylesheet">
</head>
<body class="anime-bg">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-cherry-blossom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand anime-logo" asp-area="" asp-controller="Anime" asp-action="Index">Anime Manager</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-route-fun="ByCountry" asp-controller="Anime" asp-action="Index">Contry</a>
                        </li>
                        <li class="nav-item">
                            <a class="dropdown-item" asp-area="" asp-route-fun="ByCategory" asp-controller="Anime" asp-action="Index">Category</a>
                        </li>    
                         @if (SignInManager.IsSignedIn(User))
    {
                        <li class="nav-item">
                            <a class="dropdown-item" asp-area="" asp-route-fun="ByRelease" asp-controller="Anime" asp-action="Index">Release</a>
                        </li>
    }
                        <li class="nav-item">
                            <a class="dropdown-item" asp-area="" asp-route-fun="ByRating" asp-controller="Anime" asp-action="Index">Rating</a>
                        </li>

                    </ul>

                    <partial name="_LoginPartial" />
                </div>
                <input type="search" placeholder="Search" style="border-radius:20px;text-align:center;" oninput="Search(this.value)" />
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-cherry-blossom">
        <div class="container">
            &copy; 2024 - Anime Manager - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("scriptsConst", required: false)
    @await RenderSectionAsync("Scripts", required: false)
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const animeCreatorBtn = document.getElementById('animeCreatorBtn');
            const creatorMenu = document.getElementById('creatorMenu');

            if (animeCreatorBtn && creatorMenu) {
                animeCreatorBtn.addEventListener('mouseenter', function () {
                    const rect = animeCreatorBtn.getBoundingClientRect();
                    creatorMenu.style.top = `${rect.bottom}px`;
                    creatorMenu.style.left = `${rect.left}px`;
                    creatorMenu.style.display = 'block';
                });

                creatorMenu.addEventListener('mouseleave', function () {
                    creatorMenu.style.display = 'none';
                });
            }
        });
        function Search(input) {
            var allAnime = document.querySelectorAll(".anime-item");
            var allAnimeControler = document.querySelectorAll(".anime-component");
            //allAnime
            allAnimeControler.forEach(
                function (value) {
                    const allAnimes = value.children[1].children;
                    console.log(allAnime)
                    var visibleItem = 0;
                    var abc = value.getAttribute("filtr")
                    if (value.getAttribute("filtr")=="false") {
                        for (let i = 0; i < allAnimes.length; i++) {
                            const anime = allAnimes[i];
                            if (anime.getAttribute("name").toUpperCase().includes(input.toUpperCase())) {
                                anime.style.display = "block";
                                visibleItem++;
                            } else {
                                anime.style.display = "none";
                            }
                        }
                    }
                    if (visibleItem == 0) {
                        value.style.display = "none";
                    }
                    else{
                        value.style.display ="block"
                    }
                }
            )
        }
        </script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
