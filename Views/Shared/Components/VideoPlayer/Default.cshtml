<div class="text-center">
    <div class="video-container" style="display:none">
        <video id="player" width="100%" height="100%" style="z-index: 9;">
            <source src="" type="video/mp4">
            Váš prohlížeč nepodporuje přehrávání videa.
        </video>
        <div class="custom-controls">
            <div id="timeline">
                <div id="timeline-progress"></div>
            </div>
            <div id="subtitle-menu" class="subtitle-menu" style="display:none;">
                <!-- Jazyky titulků budou zde dynamicky přidány -->
            </div>

            <div class="controls-row">
                <div>
                    <button id="play-pause-btn" class="control-button">
                        <svg viewBox="0 0 24 24">
                            <path d="M8 5v14l11-7z" />
                        </svg>
                    </button>
                    <button id="volume-btn" class="control-button">
                        <svg viewBox="0 0 24 24">
                            <path d="M3 9v6h4l5 5V4L7 9H3zm13.5 3c0-1.77-1.02-3.29-2.5-4.03v8.05c1.48-.73 2.5-2.25 2.5-4.02zM14 3.23v2.06c2.89.86 5 3.54 5 6.71s-2.11 5.85-5 6.71v2.06c4.01-.91 7-4.49 7-8.77s-2.99-7.86-7-8.77z" />
                        </svg>
                    </button>
                    <input type="range" id="volume-control" min="0" max="1" step="0.1" value="1">
                </div>
                <div>
                    <button id="subtitle-btn" class="control-button">
                        <svg viewBox="0 0 24 24">
                            <path d="M20,4H4C2.9,4,2,4.9,2,6v12c0,1.1,0.9,2,2,2h16c1.1,0,2-0.9,2-2V6C22,4.9,21.1,4,20,4z M4,12h4v2H4V12z M10,16H4v-2h6V16z M16,16h-4v-2h4V16z M20,16h-2v-2h2V16z M20,12h-8v-2h8V12z" />
                        </svg>
                    </button>
                    <button id="fullscreen-btn" class="control-button">
                        <svg viewBox="0 0 24 24">
                            <path d="M7 14H5v5h5v-2H7v-3zm-2-4h2V7h3V5H5v5zm12 7h-3v2h5v-5h-2v3zM14 5v2h3v3h2V5h-5z" />
                        </svg>
                    </button>
                </div>

            </div>
        </div>

    </div>
</div>