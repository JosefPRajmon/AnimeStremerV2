@{

}



<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="anime-card p-3">
                <h5 class="anime-title">@item.Name</h5>
                <p>@(item.Description?.Length > 100 ? item.Description.Substring(0, 97) + "..." : item.Description)</p>
                <div class="mt-3">
                    <a href="@Url.Action("Edit", "Anime", new { id = item.Id })" class="btn btn-warning btn-sm">Edit</a>
                    <a href="@Url.Action("Details", "Anime", new { id = item.Id })" class="btn btn-info btn-sm">Details</a>
                    <a href="@Url.Action("Delete", "Anime", new { id = item.Id })" class="btn btn-danger btn-sm">Delete</a>
                </div>
            </div>
        </div>
    }
</div>